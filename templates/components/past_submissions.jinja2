{% if submission_list %}
  <h3 class="ui horizontal divider header">
    {{ _('PAST SUBMISSIONS') }}
  </h3>

  <table class="ui celled table striped center aligned compact">
    <thead>
      <tr>
        <th>#</th>
        <th>{{ _('Sent') }}</th>
        <th>{{ _('Judged') }}</th>
        <th>{{ _('Lang') }}</th>
        <th>{{ _('Verdict') }}</th>
        <th>{{ _('CPU') }}</th>
      </tr>
    </thead>
    <tbody>
      {% for submission in submission_list %}
        <tr>
        <td>
        {% if not submission.contest_id %}
          <a href="{{ url('problems:submission', submission.problem_id, submission.id) }}">{{ submission.id }}{% if contest %}*{% endif %}</a>
        {% else %}
          <a href="{{ url('contests:submission', submission.contest_id, submission.id) }}">{{ submission.id }}</a>
        {% endif %}

        </td>
          <td>{{ submission.create_time | date('Y-m-d H:i:s') }}</td>
          <td>{{ submission.judge_end_time | date('Y-m-d H:i:s') }}</td>
          <td>{{ submission.get_lang_display() }}</td>
          <td><h5 class="ui header status-span" {% if show_percent %}data-sp="1"{% endif %} data-score="{{ submission.status_score }}" data-status="{{ submission.status }}" data-test="{{ submission.status_test }}"></h5></td>
          <td>{{ submission.get_time_display() }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
  {% if view_more %}
    <a href="{{ url('contests:my', contest.pk) }}" class="ui right floated primary button">{{ _('View All') }} <i class="right chevron icon"></i></a>
  {% endif %}

{% endif %}