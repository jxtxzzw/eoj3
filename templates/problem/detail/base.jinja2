{% extends 'base.jinja2' %}

{% block title %}Problem #{{ problem.pk }} - {% endblock %}

{% block page_header %}{{ problem.pk }}. {{ problem.title }}{% endblock %}

{% block content %}

  <div class="ui secondary menu small weight normal stackable">
    <a class="item {{ active('problems:detail') }}" href="{{ url('problems:detail', problem.pk) }}">{{ _('DESCRIPTION') }}</a>
    <a class="item {{ active('problems:statistics') }}" href="{{ url('problems:statistics', problem.pk) }}">{{ _('STATISTICS') }}</a>
    <a class="item {{ active('problems:discussion') }}" href="{{ url('problems:discussion', problem.pk) }}">
      {% if not active('problems:discussion') and discussion_count > 0 %}{{ discussion_count }}{% endif %}{{ _('DISCUSSION') }}
    </a>
    {% if is_privileged %}
    <a class="item" href="{{ url('polygon:problem_list_2') }}?exact={{ problem.pk }}">{{ _('MANAGE') }}</a>
    {% endif %}
  </div>

  {% block problem_content %}
  {% endblock %}

{% endblock %}
