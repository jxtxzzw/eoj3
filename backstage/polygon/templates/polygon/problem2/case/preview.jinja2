{% extends 'polygon/problem2/base.jinja2' %}

{% block problem_content %}
<table class="ui definition table">
  <tbody>
    <tr>
      <td>Case Number</td>
      <td>{{ case.case_number }}</td>
    </tr>
    <tr>
      <td>As Sample</td>
      <td>{% if case.in_samples %}Yes{% else %}No{% endif %}</td>
    </tr>
    <tr>
      <td>As Pretest</td>
      <td>{% if case.in_pretests %}Yes{% else %}No{% endif %}</td>
    </tr>
    <tr>
      <td>Judged</td>
      <td>{% if case.activated %}Yes{% else %}No{% endif %}</td>
    </tr>
    <tr>
      <td>Locked Output</td>
      <td>{% if case.output_lock %}Yes{% else %}No{% endif %}</td>
    </tr>
    <tr>
      <td>Worth</td>
      <td>{{ case.points }} pts</td>
    </tr>
    <tr>
      <td>Created</td>
      <td>{{ case.create_time | date("Y-m-d H:i:s") }}</td>
    </tr>
    <tr>
      <td>Updated</td>
      <td>{{ case.update_time | date("Y-m-d H:i:s") }}</td>
    </tr>
    <tr>
      <td>Fingerprint</td>
      <td>{{ case.fingerprint }}</td>
    </tr>
    <tr>
      <td>Based on</td>
      <td>{% if case.parent_id %}<a href="{{ url('polygon:revision_case_preview', problem.id, revision.id, case.parent_id) }}">{{ case.parent_id }}</a>{% endif %}</td>
    </tr>
    <tr>
      <td>Input</td>
      <td style="font-family:monospace;">{{ case.input_preview }}</td>
    </tr>
    <tr>
      <td>Output</td>
      <td style="font-family:monospace;">{{ case.output_preview }}</td>
    </tr>
</tbody></table>
{% endblock %}