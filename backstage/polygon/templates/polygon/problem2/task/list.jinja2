{% extends 'polygon/problem2/base.jinja2' %}

{% block problem_content %}

  <table class="ui celled table center aligned very compact">
    <thead>
      <tr>
        <th class="collapsing">#</th>
        <th class="collapsing">Abstract</th>
        <th class="collapsing">Created</th>
        <th class="collapsing">Updated</th>
        <th class="collapsing">Status</th>
        <th class="collapsing">Report</th>
      </tr>
    </thead>
    <tbody>
      {% for task in task_list %}
        <tr {% if task.status == -1 %}class="error"{% endif %}>
          <td>{{ task.pk }}</td>
          <td>{{ task.abstract }}</td>
          <td>{{ task.create_time | date('Y-m-d H:i:s') }}</td>
          <td>{{ task.update_time | date('Y-m-d H:i:s') }}</td>
          <td>{{ task.get_status_display() }}</td>
          <td><a href="{{ url('polygon:revision_task_preview', problem.id, revision.id, task.id) }}">View</a></td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

{% endblock %}
