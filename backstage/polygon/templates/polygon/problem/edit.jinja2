{% extends 'polygon/problem/base.jinja2' %}

{% block problem_content %}

  <div class="ui fluid accordion" style="margin-bottom: 2em;">
    <div class="title">
      <i class="dropdown icon"></i>
      Edit Admin Access
    </div>
    <div class="content">
      <form class="ui form" method="POST" action="{{ url('polygon:problem_access_manage', problem.id) }}">
        {% csrf_token %}
        <div class="field">
          {{ user_search_multiple(name='admin', exist=admin_list) }}
        </div>
        <button class="ui submit button">You Must Save Here</button>
      </form>
    </div>
  </div>

  {% include 'components/form.jinja2' %}

{% endblock %}